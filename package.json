{
  "name": "rollup-plugin-folder-input",
  "version": "1.0.0",
  "description": "Rollup plugin to allow specification of 'input' array using globs",
  "main": "src/index.js",
  "exports": {
    "import": "./lib/index.mjs",
    "require": "./lib/index.cjs"
  },
  "files": [
    "lib/index.mjs",
    "lib/index.cjs"
  ],
  "scripts": {
    "prebuild": "trash ./lib/**/*",
    "build": "rollup -c rollup.build.config.js",
    "prebuild-tests": "trash ./.tests/**/*",
    "build-tests": "rollup -c rollup.testing.config.js",
    "pretest": "npm run build-tests",
    "test": "jasmine --config=jasmine.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dgkimpton/rollup-plugin-folder-input.git"
  },
  "keywords": [
    "rollup",
    "input",
    "glob",
    "folder",
    "plugin",
    "rollup-plugin"
  ],
  "author": "Duncan Kimpton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dgkimpton/rollup-plugin-folder-input/issues"
  },
  "homepage": "https://github.com/dgkimpton/rollup-plugin-folder-input#readme",
  "devDependencies": {
    "jasmine": "^3.7.0",
    "rollup": "^2.50.3",
    "standard": "^16.0.3",
    "trash-cli": "^4.0.0"
  },
  "dependencies": {
    "fast-glob": "^3.2.5"
  }
}
